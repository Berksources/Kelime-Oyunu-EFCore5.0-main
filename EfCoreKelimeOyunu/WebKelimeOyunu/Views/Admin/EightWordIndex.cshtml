@model EightWordViewModel

@{
    ViewData["Title"] = "Index-Eight";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eight</h1>

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2>8 HARFLİ CEVAPLAR</h2>s
        <table>
            <tr>
                <th>ID</th>
                <th>SORU</th>
                <th>CEVAP</th>
                <th>DATA</th>
                <th>PUAN</th>
            </tr>
            @foreach (var item in Model.EightWords)
            {

                <tr>
                    <td>@item.EightWordID</td>
                    <td>@item.EightWordQuestion</td>
                    <td>@item.EightWordAnswer</td>
                    <td>@item.EightWordData</td>
                    <td>@item.EightWordScore</td>
                </tr>
            }
        </table>
    </div>
</div>

<div>
    <a asp-action="Index">Anasayfa</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
