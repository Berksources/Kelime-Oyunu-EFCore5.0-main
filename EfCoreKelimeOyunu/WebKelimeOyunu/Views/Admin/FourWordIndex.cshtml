@model FourWordViewModel

@{
    ViewData["Title"] = "Index-Four";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Four</h1>

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2>4 HARFLİ CEVAPLAR</h2>s
        <table>
            <tr>
                <th>ID</th>
                <th>SORU</th>
                <th>CEVAP</th>
                <th>DATA</th>
                <th>PUAN</th>
            </tr>
            @foreach (var item in Model.FourWords)
            {

                <tr>
                    <td>@item.FourWordID</td>
                    <td>@item.FourWordQuestion</td>
                    <td>@item.FourWordAnswer</td>
                    <td>@item.FourWordData</td>
                    <td>@item.FourWordScore</td>
                </tr>
            }
        </table>
    </div>
</div>

<div>
    <a asp-action="Index">Anasayfa</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
