@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Register</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="User.UserRoleID" hidden value="2" />
            </div>
            <div class="form-group">
                <label asp-for="User.UserName" class="control-label"></label>
                <input asp-for="User.UserName" class="form-control" />
                <span asp-validation-for="User.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.UserSurname" class="control-label"></label>
                <input asp-for="User.UserSurname" class="form-control" />
                <span asp-validation-for="User.UserSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.UserPassword" class="control-label"></label>
                <input asp-for="User.UserPassword" type="password" class="form-control" />
                <span asp-validation-for="User.UserPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAgainPassword" class="control-label"></label>
                <input asp-for="UserAgainPassword" type="password" class="form-control" />
                <span asp-validation-for="UserAgainPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.UserEMail" class="control-label"></label>
                <input asp-for="User.UserEMail" class="form-control" />
                <span asp-validation-for="User.UserEMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Login">Giriş Yap</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
